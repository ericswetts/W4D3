<form action="<%=session_url%>" method="post">

  <label>
    Username:
    <input
    type="text"
    name="user[user_name]"
    value="">
  </label>
      <br><br>
  <label>
    Password:
    <input
    type="text"
    name="user[password]"
    value="">
  </label>
  <br><br>
  <% if flash.now[:errors] %>
    <% flash.now[:errors].each do |error|  %>
      <%= error %>
      <br>
    <% end %>
  <% end %>
  <br>
  <input type="submit" value="Log In">
</form>
